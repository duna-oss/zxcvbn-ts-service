{
  "$schema": "https://json.schemastore.org/tsconfig",
  "noEmit": true,
  "noErrorTruncation": true,
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["es2023"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "**/*.test.ts"]
}
